    },
    {
      "step": "installPlugin",
      "pluginData": {
        "resource": "wordpress.org/plugins",
        "slug": "jetpack-protect"
      }
    },
    {
      "step": "activatePlugin",
      "pluginPath": "bbpress"
    },
    {
      "step": "activatePlugin",
      "pluginPath": "buddypress"
    },
    {
      "step": "activatePlugin",
      "pluginPath": "akismet"
    },
    {
      "step": "activatePlugin",
      "pluginPath": "jetpack"
    },
    {
      "step": "activatePlugin",
      "pluginPath": "jetpack-protect"
    },
    {
      "step": "installPlugin",
      "pluginData": {
        "resource": "url",
        "url": "https://github.com/a8cteam51/community-gallery-tags/archive/refs/heads/main.zip"
      },
      "options": {
        "activate": true
      }
    },
    {
      "step": "setSiteOptions",
      "options": {
        "blogname": "Just rying out",
        "bp-active-components": {
          "xprofile": "1",
          "members": "1"
        }
      }
    },
    {
      "step": "importWxr",
      "file": {
        "resource": "url",
